@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<a button type="button" class="btn btn-success" asp-area="" asp-page="/Create">
    Add Record    
</a>

<table id="records" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Records[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Records[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Records[0].Measure)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model.Records)
        {
            <tr class="list-row">
                <td>
                    @Html.DisplayFor(modelItem => record.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => record.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => record.Measure)
                </td>
                <td>
                    <a button type="button" class="btn btn-danger" asp-page="./Delete" asp-route-id="@record.Id"><i class="bi bi-trash"></i></a>
                    <a button type="button" class="btn btn-primary" asp-page="./Update" asp-route-id="@record.Id"><i class="bi bi-pen"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div><p>Total Quantity: <strong>@ViewData["Total"]l</strong></p></div>
